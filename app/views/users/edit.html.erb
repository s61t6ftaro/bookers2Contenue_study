<% if @user.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
  <% @user.errors.full_messages.each do |message| %>
    <ul>
      <li>
        error<%= message %>
      </li>
    </ul>
  <% end %>
</div>
<% end %>
<%= form_for(@user) do |f| %>
  <p><%= attachment_image_tag @user, :profile_image,size: "100x100" %></p>
  <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>
  <p><%= f.text_field :name, autofocus: true,placeholder:"名前"%></p>
  <p><%= f.text_area :introduction, autofocus: true,placeholder:"自己紹介"%></p>
  <%= f.submit "変更を保存" %>
<% end %>
