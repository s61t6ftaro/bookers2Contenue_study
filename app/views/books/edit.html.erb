<% if @book.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
  <% @book.errors.full_messages.each do |message| %>
    <ul>
      <li>
        error<%= message %>
      </li>
    </ul>
  <% end %>
</div>
<% end %>
<%= form_for(@book) do |f| %>
  <p><%= f.text_field :title, autofocus: true,placeholder:"タイトル"%></p>
  <p><%= f.text_area :body, autofocus: true,placeholder:"本文"%></p>
  <%= f.submit "変更を保存" %>
<% end %>
<%= link_to 'show',book_path %>
<%= link_to 'back',books_path %>